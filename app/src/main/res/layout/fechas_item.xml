<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/guia"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="#fff"
    android:foreground="?selectableItemBackground"
    android:layout_marginStart="16dp"
    android:elevation="2dp"
    android:orientation="vertical"
    app:elevation="2dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:scaleType="centerCrop"
            android:tint="#797979"
            app:srcCompat="@drawable/ic_fecha" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="7dp"
            android:background="#00000000"
            android:maxLines="1"
            android:paddingEnd="56dp"
            android:paddingStart="72dp"
            android:text="Fecha:"
            android:textColor="#797979"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_fecha"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="56dp"
            android:paddingStart="72dp"
            android:text="2 de noviembre."
            android:textColor="#797979"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:scaleType="centerCrop"
            android:tint="#797979"
            app:srcCompat="@drawable/ic_hora" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="7dp"
            android:background="#00000000"
            android:maxLines="1"
            android:paddingEnd="56dp"
            android:paddingStart="72dp"
            android:text="Hora:"
            android:textColor="#797979"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hora"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="56dp"
            android:paddingStart="72dp"
            android:text="12:00 - 15:30 hrs."
            android:textColor="#797979"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:scaleType="centerCrop"
            android:tint="#797979"
            app:srcCompat="@drawable/ic_map" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="7dp"
            android:background="#00000000"
            android:maxLines="1"
            android:paddingEnd="56dp"
            android:paddingStart="72dp"
            android:text="Lugar:"
            android:textColor="#797979"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lugar"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="12dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingEnd="56dp"
            android:paddingStart="72dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="SalÃ³n 3, planta baja, Expo Guadalajara."
            android:textColor="#797979"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>